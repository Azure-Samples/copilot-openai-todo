{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "ts-node ./src/server.ts | pino-pretty",
    "start:prod": "node ./lib/server.js",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "clean": "rimraf lib",
    "docker:build": "docker build --tag server --file ./Dockerfile ../..",
    "docker:run": "docker run --rm --publish 3000:3000 server"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/identity": "^4.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pino-http": "^10.4.0",
    "typechat": "^0.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^22.13.4",
    "jest": "^29.4.3",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ]
  }
}

{
  "name": "copilot-openai-todo",
  "version": "1.0.0",
  "description": "A sample application demonstrating Copilot assistance for developing a Node.js app with a CosmosDB database, OpenAI and deployed on Azure",
  "private": true,
  "scripts": {
    "start": "concurrently npm:dev:* --kill-others",
    "start:server": "npm start --workspace=server",
    "start:client": "npm start --workspace=client",
    "test": "npm test --workspace=server",
    "build": "npm run build --workspaces"
  },
  "author": "Yohan Lasorsa",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "rimraf": "^5.0.5"
  }
}
